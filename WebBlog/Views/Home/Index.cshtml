@model IEnumerable<CoreBlogDataLibrary.Post>

@{
    ViewData["Title"] = "Home Page";
}

<div id="content-wrapper" class="row">
    <main class="col-md-8">
        @foreach(var post in Model)
        {
            <article>
                <h2><a href="/PostDetails/@post.Permalink">@post.Title</a></h2>
                <div>
                    By: @post.PostAuthor?.FirstName @post.PostAuthor?.LastName
                </div>
                <div>
                    @Html.Raw(post.PostContent)
                </div>
            </article>
        }

    </main>

    <aside class="col-md-4">

    </aside>
</div>